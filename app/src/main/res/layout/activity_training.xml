<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <TextView
        android:id="@+id/textapp"
        android:layout_width="274dp"
        android:layout_height="61dp"
        android:layout_marginTop="52dp"
        android:fontFamily="@font/itimregular"
        android:gravity="center"
        android:text="FITCALC"
        android:textColor="@color/red"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/training_date"
        android:layout_width="250dp"
        android:layout_height="32dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/rounded_edittext"
        android:fontFamily="@font/itimregular"
        android:gravity="center"
        android:text="29 mar 2024"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textapp" />

    <TextView
        android:id="@+id/text_name"
        android:layout_width="293dp"
        android:layout_height="33dp"
        android:layout_marginTop="84dp"
        android:background="@drawable/rounded_edittext"
        android:fontFamily="@font/itimregular"
        android:gravity="center"
        android:text="Podaj spalone kalorie na treningu:"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/training_date" />

    <EditText
        android:id="@+id/kalorie"
        android:layout_width="250dp"
        android:layout_height="32dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/rounded_edittext"
        android:ems="10"
        android:fontFamily="@font/itimregular"
        android:gravity="center"
        android:inputType="text"
        android:text="300"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_name" />

    <Button
        android:id="@+id/button_przelicz"
        android:layout_width="164dp"
        android:layout_height="27dp"
        android:layout_marginTop="36dp"
        android:background="@drawable/rounded_loginbutton"
        android:fontFamily="@font/itimregular"
        android:text="PrzeÅ›lij"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/kalorie" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="111dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_przelicz"
        tools:layout_editor_absoluteX="1dp">

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/jedzenie" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/analiza" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/stopa" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/ludzik" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
